@{
    ViewData["Title"] = "Report";
}

<div class="col-lg-12" ng-controller="BolgPostCommentController">
    <div class="card">
        <div class="card-header">
            <strong>List</strong>
            <small>Form</small>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-4" style="margin:5px;">
                    <input type="text" class="form-control search" placeholder="Search" ng-change="searchFromList()" ng-model="searchText" />
                </div>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>S/L</th>
                        <th>Blog Name</th>
                        <th>Comment</th>
                        <th>User</th>
                        <th>Date</th>
                        <th>Total Comment</th>
                    </tr>
                </thead>
                <tbody ng-repeat="y in filteredBlogPostComments">
                    <tr>
                        <td colspan="5">{{y.BlogName}}</td>
                    </tr>
                    <tr ng-repeat="x in y.CommentList">
                        <td>{{$index + 1}}</td>
                        <td>{{x.Comment}}</td>
                        <td>{{x.UserName}}</td>
                        <td>{{x.Date}}</td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
            <div>
                <ul uib-pagination total-items="DataList.length" items-per-page="itemsPerPage" ng-change="pageChanged()" ng-model="currentPage" max-size="maxSize" class="pagination-sm" boundary-links="true"></ul>
            </div>
        </div>
    </div>
</div>
<script src="~/scripts/BolgPostCommentController.js"></script>